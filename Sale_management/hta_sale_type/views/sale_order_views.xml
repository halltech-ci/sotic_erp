<odoo>
  <data>
    <record id="sale_order_type_so_form_view" model="ir.ui.view">
        <field name="name">sale.order.type.so_form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[@name='sale_header']/group[@name='partner_details']" position='inside'>
              <field name="order_type"/>
              <field name="sequence_code"/>
          </xpath>
        </field>
    </record>
  </data>
</odoo>