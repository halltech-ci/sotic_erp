<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="TOTAL" model="hr.salary.rule.category">
        <field name="name">Cout total pour l'entreprise</field>
        <field name="code">TOTAL</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Toutes les indemnites -->
    <record id="hr_payroll.ALW" model="hr.salary.rule.category">
        <field name="name">Avanatges</field>
        <field name="code">INDM</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Toutes primes-->
    <record id="hta_custom_hr.B_IMPO" model="hr.salary.rule.category">
        <field name="name">Base imposable</field>
        <field name="code">B_IMPO</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Toutes les deductions sur le salaires-->
    <record id="hr_payroll.DED" model="hr.salary.rule.category">
        <field name="name">Deduction</field>
        <field name="code">DED</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Toutes les retenues sur le salaires-->
    <record id="RETENUES" model="hr.salary.rule.category">
        <field name="name">Total Retenues</field>
        <field name="code">RETENUES</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Toutes les retenues sur le salaires-->
    <record id="HEURE_SUPP" model="hr.salary.rule.category">
        <field name="name">Heures supplémentaires</field>
        <field name="code">HEURE_SUPP</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Salaire de base-->
    <record id="hr_payroll.BASIC" model="hr.salary.rule.category">
        <field name="name">Salaire de base</field>
        <field name="code">BASIC</field>
        <field name="parent_id" eval="False"/>
    </record>
    <!-- Salaire brut-->
    <record id="hr_payroll.GROSS" model="hr.salary.rule.category">
        <field name="name">Salaire Brut</field>
        <field name="code">BRUT</field>
    </record>
    <!-- Retenues sociales part employe-->
    <record id="hta_custom_hr.RETENUES_SOCIAL_SALARIE" model="hr.salary.rule.category">
        <field name="name">Retenues sociale part salarié</field>
        <field name="code">RSPS</field>
        <field name="parent_id" eval="RETENUES"/>
    </record>
    <!-- Retenues sociales par employeur-->
    <record id="hta_custom_hr.RETENUES_SOCIAL_EMPLOYEUR" model="hr.salary.rule.category">
        <field name="name">Retenues sociale part employeur</field>
        <field name="code">RSPE</field>
        <field name="parent_id" eval="RETENUES"/>
    </record>
    <!-- Autres cumuls-->
    <record id="hta_custom_hr.autres_cumuls" model="hr.salary.rule.category">
        <field name="name">Autres Cumuls</field>
        <field name="code">CUMULS</field>
    </record>
    <!-- Cumuls des temps de travail-->
    <record id="hta_custom_hr.cumul_temps" model="hr.salary.rule.category">
        <field name="name">Cumul temps</field>
        <field name="code">C_TEMPS</field>
    </record>
</odoo>